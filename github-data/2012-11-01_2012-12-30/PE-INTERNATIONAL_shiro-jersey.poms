  <modelVersion>4.0.0</modelVersion>
  <groupId>org.apache.shiro.jersey</groupId>
  <artifactId>shiro-jersey-root</artifactId>
  <version>1.0.3-SNAPSHOT</version>
  <name>Apache Shiro :: Jersey :: Root</name>
  <packaging>pom</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	
  <modules>
    <module>jersey</module>
    <module>jersey-sample</module>
  </modules>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.apache.shiro.jersey</groupId>
        <artifactId>shiro-jersey</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.apache.shiro.jersey</groupId>
        <artifactId>jersey-sample</artifactId>
        <version>${project.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

</project>

