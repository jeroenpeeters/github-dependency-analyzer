  <artifactId>xwiki-commons-component-archetype</artifactId>
  <name>XWiki Commons - Component - Component Archetype</name>
  <packaging>maven-archetype</packaging>
  <description>
    Make it easy to create a maven project for creating XWiki Components.
  </description>
  <dependencies>
    <!-- These dependencies are required for our integration tests and we need them declared here so that Maven
         builds them first -->
    <dependency>
      <groupId>org.xwiki.commons</groupId>
      <artifactId>xwiki-commons-component-default</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.xwiki.commons</groupId>
      <artifactId>xwiki-commons-script</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.xwiki.commons</groupId>
      <artifactId>xwiki-commons-test-component</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <!-- Make sure we replace properties in the archetype-resources's pom.xml -->
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
        <includes>
          <include>**/pom.xml</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>false</filtering>
        <excludes>
          <exclude>**/pom.xml</exclude>
        </excludes>
      </resource>
    </resources>
    <extensions>
      <extension>
        <groupId>org.apache.maven.archetype</groupId>
        <artifactId>archetype-packaging</artifactId>
        <version>2.1</version>
      </extension>
    </extensions>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <configuration>
          <escapeString>\</escapeString>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-archetype-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>clover</id>
      <build>
        <plugins>
          <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-archetype-plugin</artifactId>
              <configuration>
                <!-- Don't run the Archetype Integration Tests when we're generating coverage with Clover since
                     otherwise Maven will execute in the project generated by the Archetype test and this project
                     won't have the Clover jar in its classpath and will thus fail (since it depends on other
                     modules which have been clovered already) -->
                <skip>true</skip>
              </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
