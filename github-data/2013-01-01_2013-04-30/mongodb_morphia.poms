    <packaging>jar</packaging>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <classesDirectory>fakeClassesDirectory</classesDirectory>
                    <testClassesDirectory>../morphia/target/test-classes</testClassesDirectory>
